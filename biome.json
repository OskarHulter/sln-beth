{
	"$schema": "https://biomejs.dev/schemas/1.1.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
		"ignore": ["dist/**/*", "node_modules/**/*"]
	},
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"trailingComma":"es5",
			"jsxQuoteStyle":"single",
			"quoteStyle":"single"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": ["dist/**/*", "node_modules/**/*"]
	}
}
